
  <%= form_with(model: @project, local: true) do |form| %>
    <%= form.fields_for :project_events, @project.project_events.build(event_type: "comment") do |event_form| %>
      <div class="bg-white p-6 rounded-lg shadow border border-green-100">
      <h2 class="text-xl font-semibold text-green-700 mb-4">Add a Comment</h2>
  
        <div class="mb-4">
          <%= event_form.label :content, "Your Comment", class: "block text-sm font-medium text-gray-700 mb-1" %>
          <%= event_form.text_area :content, rows: 4, class: "w-full px-4 py-2 border border-gray-300 rounded-md shadow-sm focus:outline-none focus:ring-2 focus:ring-green-400 focus:border-green-400" %>
          <%= event_form.hidden_field :event_type, value: "comment" %>
          <%= event_form.hidden_field :user_id, value: current_user.id %>

        </div>
  
        <div class="flex justify-end">
        <%= form.submit "Post Comment", class: "px-5 py-2 bg-green-600 text-white rounded-md hover:bg-green-700 transition" %>
        </div>
      </div>
    <% end %>
  <% end %>