<div class="max-w-md mx-auto mt-12 bg-white shadow-md rounded-lg p-8 border border-green-100">
  <h2 class="text-2xl font-bold text-green-700 mb-6 text-center">Log in</h2>

  <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
    <div class="mb-4">
      <%= f.label :email, class: "block text-sm font-medium text-gray-700" %>
      <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "mt-1 w-full px-4 py-2 border border-gray-300 rounded-md focus:ring-2 focus:ring-green-500 focus:outline-none" %>
    </div>

    <div class="mb-4">
      <%= f.label :password, class: "block text-sm font-medium text-gray-700" %>
      <%= f.password_field :password, autocomplete: "current-password", class: "mt-1 w-full px-4 py-2 border border-gray-300 rounded-md focus:ring-2 focus:ring-green-500 focus:outline-none" %>
    </div>

    <% if devise_mapping.rememberable? %>
      <div class="mb-4 flex items-center">
        <%= f.check_box :remember_me, class: "mr-2 rounded border-gray-300 text-green-600 focus:ring-green-500" %>
        <%= f.label :remember_me, class: "text-sm text-gray-700" %>
      </div>
    <% end %>

    <div class="mb-6">
      <%= f.submit "Log in", class: "w-full px-4 py-2 bg-green-600 text-white rounded-md hover:bg-green-700 transition-colors" %>
    </div>
  <% end %>

  <div class="text-center text-sm text-gray-600">
    <%= render "devise/shared/links" %>
  </div>
</div>
