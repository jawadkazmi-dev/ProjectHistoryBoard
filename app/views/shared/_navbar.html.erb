<% if user_signed_in? %>
<nav class="bg-white shadow-sm border-b border-green-100">
  <div class="max-w-screen-xl mx-auto px-4 py-3 flex items-center justify-between">
    
    <!-- Logo/Brand -->
    <div class="text-2xl font-extrabold text-green-700 tracking-tight">
      <i class="fa-solid fa-leaf mr-2"></i>
      Project History Board
    </div>

    <!-- Navigation Links -->
    <div class="flex items-center gap-2">
      <%= link_to root_path, class: "px-4 py-2 rounded-full text-sm font-medium #{current_page?(root_path) ? 'bg-green-100 text-green-800' : 'text-green-700 hover:bg-green-50'}" do %>
        <i class="fa-solid fa-house mr-1"></i> Home
      <% end %>

      <%= link_to new_project_path, class: "px-4 py-2 rounded-full text-sm font-medium #{current_page?(new_project_path) ? 'bg-green-100 text-green-800' : 'text-green-700 hover:bg-green-50'}" do %>
        <i class="fa-solid fa-circle-plus mr-1"></i> Add Project
      <% end %>

      <!-- User Menu -->
      <div class="relative group">
        <button class="flex items-center px-4 py-2 rounded-full text-sm font-medium text-green-700 hover:bg-green-50">
          <i class="fa-solid fa-user mr-2"></i>
            <%= current_user.email %>
          <i class="fa-solid fa-chevron-down ml-2 text-xs"></i>
        </button>
        

        <!-- Dropdown -->
        <div class="absolute right-0 z-10 hidden group-hover:flex flex-col bg-white shadow-md  w-48 rounded-lg border border-gray-100">
          <%= button_to "Sign Out", destroy_user_session_path, method: :delete, data: { turbo: "false" }, class: "w-full text-left px-4 py-2 text-sm text-red-600 hover:bg-red-50 hover:text-red-800" %>
        </div>
      </div>
    </div>
  </div>
</nav>

<% else %>

<nav class="bg-white shadow-sm border-b border-green-100">
  <div class="max-w-screen-xl mx-auto px-4 py-3 flex justify-center">
    <div class="text-2xl font-extrabold text-green-700 tracking-tight">
      <i class="fa-solid fa-leaf mr-2"></i>
      Project History Board
    </div>
  </div>
</nav>
<% end %>
